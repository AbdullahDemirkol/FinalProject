
<div class="notification @(IsSuccess ? "success" : "error")">
    <span>@Message</span>
</div>

<style>
    .notification-container {
        position: fixed;
        bottom: 10px; /* alt kenardan 10px uzaklıkta */
        left: 10px; /* sol kenardan 10px uzaklıkta */
        z-index: 9999; /* Diğer içeriklerin üzerinde görüntülenmesi için yüksek z-index değeri */
    }

    .notification {
        padding: 10px;
        border-radius: 5px;
        font-size: 16px;
        color: #fff;
        width: 300px;
        text-align: center;
    }

    .success {
        background-color: #4CAF50;
    }

    .notification.error {
        background-color: purple;
    }
</style>
@code {
    [Parameter]
    public string Message { get; set; }
    [Parameter]
    public bool IsSuccess { get; set; }

}
